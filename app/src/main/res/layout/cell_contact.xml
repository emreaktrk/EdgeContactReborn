<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end|center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/default_space">

    <emreaktrk.edgecontact.ui.edge.contact.ContactView
        android:id="@+id/contact_first"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:rippleColor="@android:color/darker_gray"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/default_space"/>

    <emreaktrk.edgecontact.ui.edge.contact.ContactView
        android:id="@+id/contact_second"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:rippleColor="@android:color/darker_gray"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/default_space"/>

    <emreaktrk.edgecontact.ui.edge.contact.ContactView
        android:id="@+id/contact_third"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:rippleColor="@android:color/darker_gray"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/default_space"/>

    <emreaktrk.edgecontact.ui.edge.contact.ContactView
        android:id="@+id/contact_fourth"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:rippleColor="@android:color/darker_gray"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/default_space"/>

    <emreaktrk.edgecontact.ui.edge.contact.ContactView
        android:id="@+id/contact_fifth"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:rippleColor="@android:color/darker_gray"/>
</LinearLayout>