<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <emreaktrk.edgecontact.ui.tutorial.TutorialViewPager
        android:id="@+id/tutorial_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.scalified.fab.ActionButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:onClick="onNextClicked"
        app:button_color="?attr/colorAccent"
        app:button_colorPressed="?attr/colorAccent"
        app:image="@drawable/ic_next"
        app:rippleEffect_enabled="true"/>
</FrameLayout>